<% content_for :js_to_load_b4_closing_body do %>
<script>
$(function(){
	var $cfcaption = $('#crossfade .caption');
	$('#crossfade-placeholder').crossSlide({
	  fade: 1
	}, 
	[
	  {
	    src:  'http://media.vikingfender.com.s3.amazonaws.com/photos/featured/Madeline_tp2.jpg',
	    alt:  'When Push Comes to Shove, Have A Viking On Your Side',
	    from: '80% 60% 1x',
	    to:   '45% 90% 1.5x',
	    time: 8
	  }, {
	    src:  'http://media.vikingfender.com.s3.amazonaws.com/photos/featured/P9170068_0174.jpg',
	    alt:  'Complete Marine Fendering For All Vessels',
	    from: '35% 90% 1x',
	    to:   '50% 40% 1.3x',
	    time: 5
	  }
	],
	function(idx, img, idxOut, imgOut) {
	  if (idxOut == undefined)
	  {
		$cfcaption.text(img.alt)			
		$cfcaption.fadeIn()
		if ($.browser.msie) {
			$cfcaption.textShadow()
		}
	    /*if(idx==0){
		}else{
		}*/
	  }
	  else
	  {
	    $cfcaption.fadeOut()
	  }
	});
	
	if ($.browser.msie) { $('#boats h1 span').textShadow() }
});
</script>
<% end %>
